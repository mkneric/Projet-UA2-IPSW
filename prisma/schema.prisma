// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Todo {
  id           Int      @id @default(autoincrement())
  description  String
  priorite     String?  // Priorité (Faible, Moyenne, Élevée)
  date_limite  DateTime? // Date limite de la tâche
  statut       String   @default("À faire") // Statut de la tâche (À faire, En cours, Terminée, etc.)
  est_faite    Boolean  @default(false) // Indique si la tâche est complétée
  auteur       String?  // Auteur de la tâche (optionnel)
  historique   Historique[] // Relation avec l'historique des modifications
}

model User {
  id    Int    @id @default(autoincrement())
  nom   String
}

model Historique {
  id        Int      @id @default(autoincrement())
  todoId    Int      // Clé étrangère vers Todo
  modification  String  // Détail des modifications
  date_modif   DateTime @default(now()) // Date de la modification

  todo      Todo    @relation(fields: [todoId], references: [id], onDelete: Cascade)
}
