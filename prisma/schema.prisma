// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Définition des ENUMS pour assurer la validation des valeurs possibles
enum Priorite {
  FAIBLE
  MOYENNE
  ELEVEE
}

enum Statut {
  A_FAIRE
  EN_COURS
  EN_REVISION
  TERMINEE
}

model Todo {
  id           Int       @id @default(autoincrement())
  description  String    @db.VarChar(200) // Ajout d'une limite de 200 caractères
  priorite     Priorite? // Enum au lieu de String libre
  date_limite  DateTime? // Date limite de la tâche
  statut       Statut    @default(A_FAIRE) // Enum au lieu de String libre
  est_faite    Boolean   @default(false) // Indique si la tâche est complétée
  auteur       String?   @db.VarChar(100) // Ajout d'une limite de 100 caractères
  historique   Historique[]
}

model User {
  id    Int    @id @default(autoincrement())
  nom   String @db.VarChar(100) // Ajout d'une limite de 100 caractères
}

model Historique {
  id           Int       @id @default(autoincrement())
  todoId       Int       // Clé étrangère vers Todo
  modification String    @db.VarChar(500) // Ajout d'une limite de 500 caractères
  date_modif   DateTime  @default(now()) // Date de la modification

  todo         Todo      @relation(fields: [todoId], references: [id], onDelete: Cascade)
}
