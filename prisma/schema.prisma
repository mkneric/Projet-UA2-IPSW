// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model todo{
  id            Int      @id @default(autoincrement())
  description   String
  est_faite     Boolean   @default(false)
  auteur        String?
}

model user{
  id            Int      @id @default(autoincrement())
  nom           String
}
