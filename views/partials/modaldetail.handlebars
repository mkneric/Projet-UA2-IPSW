<div id="modal-detail" class="modal">
    <div class="modal-content">
        <span class="close close-detail">&times;</span>
        <h2>Détail de la Tâche</h2>

        <form id="form-detail-tache" novalidate>
            <!-- ID caché pour modification -->
            <input type="hidden" id="task-id">

            <div class="form-group">
                <label for="titre-detail">Titre :</label>
                <input type="text" id="titre-detail" name="titre" required minlength="5" maxlength="50">
                <span class="error-message" id="error-titre-detail"></span>
            </div>

            <div class="form-group">
                <label for="description-detail">Description :</label>
                <textarea id="description-detail" name="description" required minlength="5" maxlength="200"></textarea>
                <span class="error-message" id="error-description-detail"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="priorite-detail">Priorité :</label>
                    <select id="priorite-detail" name="priorite" required>
                        <option value="Faible">Faible</option>
                        <option value="Moyenne">Moyenne</option>
                        <option value="Élevée">Élevée</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="date-limite-detail">Date Limite :</label>
                    <input type="date" id="date-limite-detail" name="date-limite" required>
                    <span class="error-message" id="error-date-limite-detail"></span>
                </div>
            </div>

            <div class="form-row-last">
                <div class="form-group">
                    <label for="assignation-detail">Assigner une Tâche :</label>
                    <input type="text" id="assignation-detail" name="assignation">
                    <span class="error-message" id="error-assignation-detail"></span>
                </div>

                <div class="form-group">
                    <label for="statut-detail">Statut :</label>
                    <select id="statut-detail" name="statut" required>
                        <option value="À faire">À faire</option>
                        <option value="En cours">En cours</option>
                        <option value="En révision">En révision</option>
                        <option value="Terminée">Terminée</option>
                    </select>
                </div>
            </div>

            <div class="modal-buttons">
                <button type="button" class="btn modifier">Modifier</button>
                <button type="submit" class="btn enregistrer">Enregistrer</button>
                <button type="button" class="btn supprimer">Supprimer</button>
            </div>
        </form>
    </div>
</div>
